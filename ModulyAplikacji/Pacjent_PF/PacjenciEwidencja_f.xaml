<Page x:Name="pgPacjenciEwidencja_f" x:Class="MediStoma3._0.ModulyAplikacji.Pacjent_PF.PacjenciEwidencja_f"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediStoma3._0.ModulyAplikacji.Pacjent_PF"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Style="{DynamicResource stylStronyAplikacji}"
      Title="PacjenciEwidencja_f">
    <Grid x:Name="pnlMain">
        <DockPanel>
            <StackPanel x:Name="pnlPrzyciskiMenu" Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="3,3,3,3" Background="#6c757d">
                <Button x:Name="btnDodaj" Style="{StaticResource stylMenuPrzyciskiAkcji}">Dodaj</Button>
                <Button x:Name="btnDane" Style="{StaticResource stylMenuPrzyciskiAkcji}">Dane</Button>
                <Button x:Name="btnUsun" Style="{StaticResource stylMenuPrzyciskiAkcji}">Usuń</Button>
            </StackPanel>
            <DockPanel>
                <StackPanel x:Name="pnlFiltry" Width="200">
                    
                </StackPanel>
                <DataGrid x:Name="grdPacjenci" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="10"/>
            </DockPanel>
        </DockPanel>
    </Grid>
</Page>
